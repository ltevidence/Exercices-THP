
<body>
    <a href="<%= new_gossip_path%>" class="btn btn-info d-flex justify-content-center">Créer un nouveau potin</a> 

<div class="row justify-content-center">

  <div class="card-body">
    </div>
      <div class="row album py-5 d-flex justify">
      <%@gossips.each do |gossip|%>
    <div class="container">
        <div class="col pt-4">
          <div class="card shadow-sm">
            <div class="card-body">
            <h5 class="card-title"><%= gossip.title %></h5>
            <a href="<%= gossip_path(gossip.id)%>" class="btn btn-default"> <%= gossip.user.first_name + " " + gossip.user.last_name%> </a><br>
                <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group justify-items-center">
                  <button type="button" class="btn btn-sm btn-primary"><a href="<%= edit_gossip_path(gossip.id)%>" class="text-light">Editer</a></button>
                  <button type="button" class="btn btn-sm btn-danger"><a href="<%= gossip_path(gossip.id)%>"data-confirm="Etes vous-sûr ?" data-method="DELETE"class="text-light">Supprimer</a></button>
                </div>
              </div>
            </div>
          </div>
        </div>
        </div>
        <% end %>
</div>
</body>
