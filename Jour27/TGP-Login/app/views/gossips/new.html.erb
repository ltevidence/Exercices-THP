<body class="bg-info">

<h1 class="d-flex justify-content-center text-white pt-5">Créer un Gossip</h1><br>

<%= form_tag url_for(action: 'create'), method: "post", class:"form-group" do %>
<div class="col d-flex-center">
<%= label_tag 'Title' %>
<%= text_field_tag 'title', @gossip.title , class:"form-control"%>
<%= label_tag 'Content'%>
<%= text_area_tag 'content', @gossip.content , class:"form-control"%>
<br /> <br />

<%= submit_tag "Create Gossip", class:"btn btn-warning" %>

<% if @gossip.errors.any? %>
<p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
<ul>
  <% @gossip.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>
<% end %>

</form>
</div>
</body>
